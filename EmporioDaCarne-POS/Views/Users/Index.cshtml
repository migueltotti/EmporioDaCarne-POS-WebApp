@model EmporioDaCarne_POS.Models.User

@{
    ViewData["Title"] = "Login";
    ViewData["Aplication"] = "Emporio da Carne";

    Layout = "_LayoutLogin";
}

<main class="form-signin w-login m-auto h-100 align-content-center">
    <form class="" asp-action="Index">
        @*<img class="mb-4" src="/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">*@
        <h1 class="h1 fw-bold mb-5 h1-login">@ViewData["Aplication"]</h1>

        <h3 class="h3 mb-2 fw-normal fs-4">Sign in</h3>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating mb-2">
            <input asp-for="Email" type="email" value="@ViewData["email"]" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label asp-for="Email">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating my-2">
            <input asp-for="Password" value="@ViewData["password"]" class="form-control" id="floatingPassword" placeholder="Password">
            <label asp-for="Password">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @if(ViewData["authenticated"] == "NotPassed")
        {
            <div class="form-check text-start my-3">
                <label class="link-danger">
                    Email or password incorrect!
                </label>
            </div>
        }

        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Remember me
            </label>
        </div>
        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    </form>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}